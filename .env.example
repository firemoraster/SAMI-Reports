# ===========================================
# SAMI Weekly Reports System Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -----------------
# TELEGRAM SETTINGS
# -----------------
# Отримати у @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook URL (для production)
# Наприклад: https://yourapp.railway.app/api/webhook/telegram
TELEGRAM_WEBHOOK_URL=

# Режим роботи: webhook або polling
# Використовуйте polling для локальної розробки
TELEGRAM_MODE=polling

# -----------------
# TRELLO SETTINGS
# -----------------
# Отримати на https://trello.com/power-ups/admin
TRELLO_API_KEY=your_trello_api_key
TRELLO_API_SECRET=your_trello_api_secret

# Отримати через OAuth або на https://trello.com/1/authorize?...
TRELLO_TOKEN=your_trello_token

# ID дошки (знайти в URL дошки або через API)
TRELLO_BOARD_ID=your_board_id

# -----------------
# DATABASE SETTINGS
# -----------------
# SQLite шлях
DATABASE_PATH=./data/reports.db

# -----------------
# ADMIN SETTINGS
# -----------------
# Telegram ID адміністраторів (через кому)
ADMIN_IDS=123456789,987654321

# ID менеджера за замовчуванням (для повідомлень)
DEFAULT_MANAGER_ID=123456789

# -----------------
# REPORT SETTINGS
# -----------------
# День нагадування (1=Пн, 5=Пт, 7=Нд)
REPORT_REMINDER_DAY=5

# Час нагадування (HH:MM)
REPORT_REMINDER_TIME=15:00

# Дедлайн звіту (день тижня)
REPORT_DEADLINE_DAY=5

# Час дедлайну
REPORT_DEADLINE_TIME=18:00

# -----------------
# LANGUAGE SETTINGS
# -----------------
# Мова за замовчуванням: uk (українська) або en (англійська)
DEFAULT_LANGUAGE=uk

# -----------------
# LOGGING SETTINGS
# -----------------
# Рівень логування: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Файл логів (залиште порожнім для виводу в консоль)
LOG_FILE=logs/app.log

# -----------------
# API SETTINGS
# -----------------
# Хост та порт API сервера
API_HOST=0.0.0.0
API_PORT=8000

# Секретний ключ для JWT (згенеруйте випадковий рядок)
SECRET_KEY=your_secret_key_here

# -----------------
# PDF SETTINGS
# -----------------
# Шлях до шаблонів PDF
PDF_TEMPLATES_PATH=templates/pdf

# Тимчасова папка для PDF
PDF_TEMP_PATH=temp/pdf

# -----------------
# OPTIONAL FEATURES
# -----------------
# Google Sheets інтеграція
# GOOGLE_SHEETS_CREDENTIALS=path/to/credentials.json
# GOOGLE_SHEETS_ID=your_spreadsheet_id

# Jira інтеграція (для автоматичного створення задач)
# JIRA_URL=https://yourcompany.atlassian.net
# JIRA_EMAIL=your_email@company.com
# JIRA_API_TOKEN=your_jira_token
# JIRA_PROJECT_KEY=PROJ
